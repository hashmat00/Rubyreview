<h1 align='center'>Categories Lists</h1>

<div align='center'>
        <% @categories.each do |category| %>
            <ul class='listing'>
                <div class='row'>
                    <div class='well col-md-4 col-md-offset-4'>
                        <li class='article-title'>
                            <%= link_to "#{category.name}", category_path(category) %>
                        </li>
                        <li><small><%= pluralize(category.articles.count, 'articles') %></small></li>
                         <div class='row'>
                          <div class='row'>
                            <% if logged_in? and current_user.admin? %>
                            <span class='badge'><%= link_to 'Edit Category', edit_category_path(category) %></span>
                            <% end %>
                           </div>
                     </div>
                </div>
                
            </ul>
        
        
        <% end %>
        <%= will_paginate %>
</div>